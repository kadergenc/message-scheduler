{
    "swagger": "2.0",
    "info": {
        "description": "This is a message scheduler service",
        "title": "Message Scheduler API",
        "contact": {},
        "version": "1.0"
    },
    "host": "localhost:8081",
    "basePath": "/",
    "paths": {
        "/_monitoring/health": {
            "get": {
                "description": "Check if the message scheduler service is running",
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "monitoring"
                ],
                "summary": "Health Check",
                "responses": {
                    "200": {
                        "description": "Service is healthy",
                        "schema": {
                            "$ref": "#/definitions/server.HealthResponse"
                        }
                    }
                }
            }
        },
        "/sent-messages": {
            "get": {
                "description": "Retrieve sent messages with optional limit",
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "messages"
                ],
                "summary": "Get Sent Messages",
                "parameters": [
                    {
                        "type": "integer",
                        "description": "Number of messages to retrieve (default: 50, max: 100)",
                        "name": "limit",
                        "in": "query"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Sent messages retrieved successfully",
                        "schema": {
                            "$ref": "#/definitions/api.GetSentMessagesResponse"
                        }
                    },
                    "400": {
                        "description": "Invalid limit parameter",
                        "schema": {
                            "type": "object",
                            "additionalProperties": {
                                "type": "string"
                            }
                        }
                    },
                    "500": {
                        "description": "Failed to retrieve sent messages",
                        "schema": {
                            "type": "object",
                            "additionalProperties": {
                                "type": "string"
                            }
                        }
                    }
                }
            }
        },
        "/start-send-message": {
            "post": {
                "description": "Send a message via webhook and return the webhook response",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "messages"
                ],
                "summary": "Start Send Message",
                "parameters": [
                    {
                        "description": "Message request payload",
                        "name": "request",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/api.MessageRequest"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Message sent successfully",
                        "schema": {
                            "$ref": "#/definitions/api.MessageResponse"
                        }
                    },
                    "400": {
                        "description": "Invalid request body or missing required fields",
                        "schema": {
                            "type": "object",
                            "additionalProperties": {
                                "type": "string"
                            }
                        }
                    },
                    "500": {
                        "description": "Failed to send message",
                        "schema": {
                            "type": "object",
                            "additionalProperties": {
                                "type": "string"
                            }
                        }
                    }
                }
            }
        }
    },
    "definitions": {
        "api.GetSentMessagesResponse": {
            "type": "object",
            "properties": {
                "messages": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/api.SentMessageResponse"
                    }
                },
                "total": {
                    "type": "integer"
                }
            }
        },
        "api.MessageRequest": {
            "type": "object",
            "required": [
                "content",
                "to"
            ],
            "properties": {
                "content": {
                    "type": "string"
                },
                "to": {
                    "type": "string"
                }
            }
        },
        "api.MessageResponse": {
            "type": "object",
            "properties": {
                "message": {
                    "type": "string",
                    "example": "accepted"
                },
                "messageId": {
                    "type": "string",
                    "example": "01623bff-7fa9-4ccb-a843-e6d98908dc49"
                }
            }
        },
        "api.SentMessageResponse": {
            "type": "object",
            "properties": {
                "content": {
                    "type": "string",
                    "example": "Hello, World!"
                },
                "createdAt": {
                    "type": "string",
                    "example": "2023-10-01T10:00:00Z"
                },
                "id": {
                    "type": "string",
                    "example": "01623bff-7fa9-4ccb-a843-e6d98908dc49"
                },
                "phone": {
                    "type": "string",
                    "example": "+905551234567"
                },
                "remoteMessageId": {
                    "type": "string",
                    "example": "whatsapp-msg-123"
                },
                "sentAt": {
                    "type": "string",
                    "example": "2023-10-01T10:05:00Z"
                },
                "status": {
                    "type": "string",
                    "example": "SENT"
                },
                "updatedAt": {
                    "type": "string",
                    "example": "2023-10-01T10:05:00Z"
                }
            }
        },
        "server.HealthResponse": {
            "type": "object",
            "properties": {
                "message": {
                    "type": "string",
                    "example": "Message scheduler alive!"
                },
                "status": {
                    "type": "string",
                    "example": "ok"
                }
            }
        }
    }
}